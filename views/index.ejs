
<div class="container">
    <ul class="p-3">
        <% if(messages.success_msg) { %>
            <li>
                <div class="alert alert-success" role="alert">
                <%= messages.success_msg %>
            </div>
            </li>
            <% } %>
    </ul>
    <ul>
        <% if(messages.error) { %>
            <li>
                <div class="alert alert-success" role="alert">
                <%= messages.error %>
                </div>
            </li>
            <% } %>
    </ul>
    <div class="row m-3 p-3">
        <div class="col-md-6">
            <form action="/login" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" name="email" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div class="hstack gap-3">
                <div class="ms-auto">Belum punya akun?</div>
                <div class="vr"></div>
                <div class="bg-light border"><a class="btn btn-success btn-lg float-end" href="/register"
                        role="button"><i class="bi bi-file-earmark-plus-fill"></i> Registrasi</a></div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="../img/ind1.png" class="rounded img-fluid float-end" alt="login">
        </div>
    </div>
</div>