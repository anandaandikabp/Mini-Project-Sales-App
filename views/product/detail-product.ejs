<% let rp = Intl.NumberFormat('id-ID') %> 
<div class="row m-3 p-3">
    <div class="col-md-4 mt-5">
        <div class="col">
            <div class="card m-3" style="width: 18rem;">
                <img src="/img/<%= product.image %>" alt="ava">
            </div>
        </div>
    </div>
    <div class="col-md-8 p-3">
        <div class="jumbotron">
            <h3>Brand Name: <%= product.brand %>
            </h3>
            <hr class="my-4">
            <div class="card-body">
                <h5 class="card-title">
                    Part ID : <%= product.part_id %>
                </h5>
                <h5 class="card-title">
                    Available Stock : <%= product.stock %>
                </h5>
                <h5 class="card-title">
                    Part For : <%= product.part_for %>
                </h5>
                <hr>
                <h1 class="card-text">
                    Price List: Rp. <%= rp.format(product.price) %>
                </h1>
                <a href="/product/edit/<%= product.part_id %>" class="btn btn-warning">Edit</a>
                <a href="/product/delete/<%= product.part_id %>" class="btn btn-danger"
                    onclick="return confirm('Yakin?')">Hapus</a>
                <a class="btn btn-primary" href="/product/list-product" role="button">Kembali</a>
            </div>
        </div>
    </div>
</div>