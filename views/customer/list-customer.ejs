
    <div class="row">
        <div class="col">
            <div class="jumbotron">
                <h1 class="display-4">Halaman List Customer</h1>
                <hr class="my-4">
            </div>
            <div class="col">
                <% if (msg.length !== 0) { %>
                    <div class="alert alert-success" role="alert">
                        <%= msg %> 
                      </div>
                <% } %>
                <% if (msg2.length !== 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= msg2 %> 
                      </div>
                <% } %>               
                
                <a class="btn btn-success btn-lg float-end" href="/customer/add-customer" role="button"><i class="bi bi-file-earmark-plus-fill"></i> Tambah customer</a>
                <br>                
                <h2>Customer List</h2>
                <!-- menampilkan data dari app -->
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Customer Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Mobile Phone</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (customer.length>= 1) { %>
                            <% customer.forEach((customer, i)=> { i++ %>
                                <tr>
                                    <th scope="row">
                                        <%= customer.cus_id %>
                                    </th>
                                    <td>
                                        <%= customer.name %>
                                    </td>
                                    <td>
                                        <%= customer.address %>
                                    </td>
                                    <td>
                                        <%= customer.mobile %>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary badge" href="/customer/detail-customer/<%= customer.cus_id %> "
                                            role="button">Detail</a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <p>data tidak ditemukan</p>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>